   Author's custom styles
   ========================================================================== */

/* base
 * -------------------------------------------------------------------------- */

a {
    color: #464646;
    text-decoration: none;
}




/* layout
 * -------------------------------------------------------------------------- */

* {
    -webkit-box-sizing: border-box; 
    -moz-box-sizing: border-box;    
    box-sizing: border-box;   
}
.main-header {
    position: relative;
    width: 100%;
    margin: 0 auto;
    text-align: center;
}
.container {
    position: relative;
    width: 59em;
    margin: 0 auto;
}


.main-footer {
    width: 100%;
    height: 1.75em;
    background-color: #474747;
    text-align: center;
}

.shop-landing {
    width: 100%;
    padding-bottom: 28px;
    text-align: center;
    background: #fff;
}

.shop-nav {
    position: relative;
    max-width: 59em;
    margin: 2.5em auto 0 auto;
    border-top: 1px solid #474747;
    border-bottom: 1px solid #474747;
    text-align: center;
}

.shop-section {
    text-align: center;
}
.shop-section-header {
    position: relative;
    width: 94.4em;
    margin: 0 auto;
    border-top: 1px solid #474747;
    border-bottom: 1px solid #474747;
    font-size: .625em;
    line-height: 2;
    text-align: center;
}

.l-horizontal-nav {
    display: inline-block;
}
.l-horizontal-nav li {
    float: left;
}

.l-mini-nav-container {
    position: relative;
    margin: 5.625em 0 0 0;
}

.l-product-page {
    margin-top: 12.1875em;
}

.shop-section article {
    margin: 10px 15px;
}

.l-product-col {
    width: 15em;
    float: left;
    position: relative;
    display: inline-block;
    border-top: 1px solid #474747;
    text-align: center;
}

.product-images {
    width: 9.375em;
    float: right;
    padding: 3px;
    text-align: left;
    border-bottom: 1px solid #474747;

}

.product-description {
    width: 16.5em;
    margin: 0 0 1.6em -1em;
    line-height: 1.5;
}

/* mods
 * -------------------------------------------------------------------------- */


/* full body image */
.full-body-img {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: center center;
    background-attachment: scroll;
    background-repeat: no-repeat;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

/* full body background images for different sections */

/* home */
.home-bg-img {
    background-image: url({{ 'temp-homepage-bg.jpg' | asset_url }});
}

/* shop */
.shop-bg-img {
    background-image: url({{ 'temp_shop_landing_bg.jpg' | asset_url }});
}

/* individual product */
.product-bg-img {
    background-image: url({{ 'temp_product_bg.jpg' | asset_url }});
}

/* main logo */

.main-logo {
    position: absolute;
    left: 50%;
    top: 2.4375em;
    margin-left: -142px;

}

.alt-color .logo-dark {
    display: none;
}

.logo-light {
    position: absolute;
    display: none;
}

.alt-color .logo-light {
    display: block;
}


/* main nav */
.large-nav {
    margin: 2.5em 0 0 0;
    padding:0;
}

.large-nav li {
    width: 5.875em;
    height: 1.25em;
    border-right: 1px solid #464646;
}

.large-nav li:first-child,
.large-nav .journal {
    width: 5.875em;
    border-left: 1px solid #464646;
}

.large-nav a {
    width: 9.4em;
    height: 2em;
    display: block;
    margin-top: 1px;
    font-size: .625em;
    line-height: 2;
    color: #464646;
    font-family: 'NewsGothicBT-Bold';
    font-weight: normal;
    letter-spacing: 3px;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    
}

.large-nav li:first-child a,
.large-nav .journal a {
    width: 9.3em;
}

.large-nav .lineage {
    margin-right: 23.5625em;
}

.large-nav .active a,
.large-nav a:hover {
    margin-top: 0;
    border-top: 1px solid #464646;
    border-bottom: 1px solid #464646;
}

.alt-color .large-nav li,
.alt-color .large-nav li:first-child {
    border-color: #fff;
}

.alt-color .large-nav a {
    color: #fff;
}
.alt-color .large-nav .active a,
.alt-color .large-nav a:hover {
    border-color: #fff;
}

/* mini nav for smallest screen */


.mini-nav-btn {
    max-width: 28.4em;
    margin: 0 auto;
    color: #fff;
    font-size: .625em;
    line-height: 2.5;
    letter-spacing: 3px;
    text-transform: uppercase;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
}

.mini-nav {
    display: none;
    position: relative;
    width: 100%;
    max-width: 17.75em;
    margin: 0 auto;
    background: #464646;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
}

.is-open .mini-nav {
    display: block;
}
.is-open .mini-nav-btn {
    display: none;
}
.mini-nav-links {
    margin: 0;
    padding: 0;
    list-style: none;

}
.mini-nav-links li a {
    color: #fff;
    font-size: .625em;
    letter-spacing: 3px;
    text-transform: uppercase;
}

/* main footer */
.main-footer {
    position: fixed;
    left:0;
    bottom: 0;
    z-index: 999;
}

/* footer nav */
.footer-nav ul {
    display: inline-block;
    vertical-align: middle;
    margin: 0;
    padding: 0;
}

.footer-nav li {
    padding-left: 1.875em;
}
.footer-nav li:first-child {
    padding-left: 0;
}

.footer-nav a {
    color: #fff;
    font-family: 'NewsGothicBT-Bold';
    font-weight: normal;
    font-size: .625em;
    line-height: 2;
    letter-spacing: 3px;
    text-transform: uppercase;
    text-decoration: none;
}

.footer-nav a:hover {
    border-bottom: 2px solid #fff;
}


/* shop nav */
.shop-nav ul {
    display: inline-block;
    vertical-align: middle;
    margin: 0;
    padding: 0;
    font-size: .625em;
    line-height: 1;
}

.shop-nav li {
    padding-left: 3em;
    font-size: 1em;
    line-height: 1;
}
.shop-nav li:first-child {
    padding-left: 0;
}

.shop-nav a {
    color: #474747;
    font-weight: normal;
    font-size: 1em;
    line-height: 2;
    letter-spacing: 3px;
    text-transform: uppercase;
    text-decoration: none;
}

.shop-nav a:hover {
    border-bottom: 2px solid #474747;
}

/* shop landing container */

.shop-landing {
    margin-top: 100%;
    padding-top: 3em;
}

/* shop section heading */

.shop-section-header h1 {
    margin: 0;
    padding: .2em 0 0;
    color: #474747;
    font-weight: normal;
    font-size: 1em;
    line-height: 2;
    letter-spacing: 3px;
    text-transform: uppercase;
}

.shop-section ul {
    display: inline-block;
    margin: 0;
    padding: 0;
    list-style: none;

}

.collection-item img {
    height: auto;
    max-width: 185px;
}

/* product page */

.main-product-image {
    position: absolute;
    width: 604px;
    left: 50%;
    bottom: 36px;
    margin-left: -302px;
}

.main-product-image img {
    width: 100%;
    height: auto;
}

.product-info {
    font-size: .625em;
    line-height: 1.4;
}

.product-name {
    margin: 2em 0 0;
    font-size: 1.2em;
    line-height: 1.4;
    font-weight: normal;
    text-transform: capitalize;
    letter-spacing: 2px;
}

.price {
    margin-top: 1.1em 0;
    font-size: 1em;
    letter-spacing: 3px;
}

/* prev and next btns */
.product-link {
    position: absolute;
    bottom: -4.75em;
    letter-spacing: 2px;
    width: 12.5em;
    text-align: center;
    left: 0;
}

.product-link.prev {
    font-size: 1.2em;
}

.product-link.next {
    font-size: .75em;
}

.shop-link {
    font-size: 1.1em;
    letter-spacing: 3px;
}

.add-to-cart-btn {
    padding: .5em 0;
    margin-top: 3em;
    border-top: 1px solid #474747;
    border-bottom: 1px solid #474747;
    letter-spacing: 2px;
    text-transform: uppercase;

}

.product-images img {
    padding: 5px;
    max-width: 70px;
    height: auto;
}



/* ==========================================================================
   Helper classes
   ========================================================================== */

/* author helpers */

.small-screen {
    display: none;
    visibility: hidden;
}

/*
 * Image replacement
 */

.ir {
    background-color: transparent;
    border: 0;
    overflow: hidden;
    /* IE 6/7 fallback */
    *text-indent: -9999px;
}

.ir:before {
    content: "";
    display: block;
    width: 0;
    height: 150%;
}

/*
 * Hide from both screenreaders and browsers: h5bp.com/u
