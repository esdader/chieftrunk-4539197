/* @import must be at top of file, otherwise CSS will not work */
@import url("//hello.myfonts.net/count/279300");

@font-face {font-family: 'CenturyStd-Book';src: url('279300_2_0.eot');src: url('279300_2_0.eot?#iefix') format('embedded-opentype'),url('279300_2_0.woff') format('woff'),url('279300_2_0.ttf') format('truetype');}

/* Undo background and gradient */
body, #main, #container, #header, #footer {
  background: #fff !important;
  font-family: 'CenturyStd-Book', serif;
}

/* Undo overview background and borders */
#main #overview {
  background: #fff;
  border: none;
}
#main #overview > * {
  border: none;
}
#main #thumbs div {
  border: none;
}

/* Insert your own logo (upload separately) */
#logo { 
  height: 65px;
  background: url({{ 'chief_trunk_logo_dark.png' | asset_url | replace: 'http://','https://' }}) center no-repeat;
}

#header > h1{
  text-align:center;
}

/* Hide the name of the store because we got this nifty logo now */

#header > h1 span.title {
  display:none;
}

#container,
#container.slim,
#main,
#container.slim #main,
#header,
#container.slim #header,
#footer,
#container.slim #footer{width:944px;background:#fff;padding:0}