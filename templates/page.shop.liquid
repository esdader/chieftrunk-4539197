 <div class="fullsize-image-bg">
    <div class="flexslider">
      <ul class="slides">
        <li class="slide-holder">
          <img src="{{ 'shop_landing_bg.jpg' | asset_url }}" alt="" class="slide-image">
        </li>
      </ul>
    </div>
</div>
<nav class="shop-nav clearfix">
	<div class="shop-nav-container">
	    <ul class="l-horizontal-nav">
	        {% for link in linklists.shop-navigation.links %}
	        	{% if forloop.first %}
		        	<li><a href="/pages/products" title="{{ link.title }}">{{ link.title }}</a></li>
		        {% else %}
		            <li><a href="/pages/products#{{ link.title | handleize }}" title="{{ link.title }}">{{ link.title }}</a></li>
		        {% endif %}

	        {% endfor %}
	    </ul>
	</div>
</nav>
